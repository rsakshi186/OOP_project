<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".retailerloginpage"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/loginpage_app_logo_2"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/retailer_login_ph_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/input_design"
        android:hint="Enter your registered Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/retailer_login_enter_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_design"
        android:hint="Enter OTP"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="15sp" />

    <Button
        android:id="@+id/retailer_login_generate_otp"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="326dp"
        android:background="@drawable/buttons"
        android:padding="3dp"
        android:text="Generate OTP"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/retailer_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Enter username"
        android:inputType="textEmailAddress"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="15sp"
        />


    <EditText
        android:id="@+id/retailer_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="570dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_design"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="15sp">


    </EditText>

    <TextView
        android:id="@+id/retailer_login_or_statement"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="446dp"
        android:layout_marginEnd="94dp"
        android:text="OR"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/retailer_login_verify_and_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/buttons"
        android:padding="3dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Verify and Sign In as Retailer"
        android:textColor="@color/white"
        />


</RelativeLayout>